{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch Firefox",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "reAttach": true,
      "pathMappings": [
        {
          "url": "webpack:///projects",
          "path": "${workspaceFolder}/projects"
        }
      ]
    },
    {
      "name": "debug v-console",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start_v-console",
      "url": "http://localhost:4200/"
    },
    {
      "name": "debug v-service",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start_v-service",
      "url": "http://localhost:4200/"
    },
    {
      "name": "Debug VMK (Chrome)",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start_vmk",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Debug VMK (Firefox)",
      "type": "firefox",
      "request": "launch",
      "preLaunchTask": "npm: start_vmk",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "debug wrap",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start_wrap",
      "url": "http://localhost:4200/"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    }
  ]
}
